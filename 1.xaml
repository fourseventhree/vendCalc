                  Margin="0,50,0,0" VerticalAlignment="Top" />
        <TextBox Grid.Row="1" Grid.Column="0" x:Name="milkBox" FontSize="15" FontWeight="Bold" Text="0" Width="100" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left"
