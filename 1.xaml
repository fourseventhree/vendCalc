                Click="Go_Click" ToolTip="Підрахувати чистий прибуток (Enter)" IsDefault="True">
            <Image Source="./Resources/coffee_go.ico"></Image>
        </Button>
        <Button Grid.Row="2" Grid.Column="1" x:Name="addHistory" Width="30" VerticalAlignment="Center" HorizontalAlignment="Center" Height="30"  Margin="0,-10,80,0" 
