            <Image Source="./Resources/saveButton.ico"></Image>
        </Button>

        <!-- CENTER CENTER CENTER CENTER CENTER CENTER CENTER CENTER CENTER CENTER CENTER CENTER CENTER CENTER CENTER CENTER CENTER CENTER CENTER-->
        <Image Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Source="./Resources/rent.ico" Width="183" Height="97" ToolTip="Сума оренди"></Image>
        <TextBox x:Name="rentBox" Grid.Row="1" Grid.Column="1" Text="0" Margin="0,90,0,0" VerticalAlignment="Top" Width="100" Height="20" TextAlignment="Center"></TextBox>

        <Image Grid.Row="1" Grid.Column="1" Source="./Resources/uah.png" VerticalAlignment="Top" Height="97" Width="183" Margin="0,100,0,100" ToolTip="Сума знята з автомату"></Image>
