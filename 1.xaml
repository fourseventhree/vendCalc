                  Margin="0,130,0,0" VerticalAlignment="Top" />
        <TextBox Grid.Row="1" Grid.Column="2" x:Name="teaMBox2" FontSize="15" FontWeight="Bold" Text="0" Width="48" Height="20" VerticalAlignment="Top" HorizontalAlignment="Right"
